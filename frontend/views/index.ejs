<!DOCTYPE html>
<html lang="fa">
<head>
  <meta charset="UTF-8">
  <title>ضرب‌المثل‌های افغان</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <%- include('partials/header', { query: typeof query !== 'undefined' ? query : '' }) %>
  <div class="container my-5">
    <h1 class="mb-4">لیست ضرب‌المثل‌ها</h1>

    <a href="/add" class="btn btn-add btn-success mb-4"><i class="bi bi-plus"></i>افزودن </a>

    <% proverbs.forEach(p => { %>
      <div class="card mb-3 shadow-sm">
        <div class="card-body">
          <p><strong>دری:</strong> <%= p.textDari %></p>
          <p><strong>پشتو:</strong> <%= p.textPashto %></p>
          <p class="en"><strong>English:</strong> <%= p.translationEn %></p>
          <p class="en"><strong>Meaning:</strong> <%= p.meaning %></p>
          <p class="en"><strong>Category:</strong> <%= p.category %></p>

          <div class="mt-3 d-flex gap-2 flex-wrap">
            <a href="/proverb/<%= p.id %>" class="btn btn-icon btn-outline-primary btn-sm"><i class="bi bi-eye"></i></a>
            <a href="/proverb/<%= p.id %>/edit" class="btn btn-icon btn-edit btn-warning btn-sm"><i class="bi bi-pencil"></i></a>
            <form action="/proverb/<%= p.id %>?_method=DELETE" method="POST" onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید حذف کنید؟')" style="display:inline;">
              <button type="submit" class="btn btn-icon btn-delete btn-danger btn-sm"><i class="bi bi-trash"></i></button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
  <%- include('partials/footer')%>
</body>
</html>