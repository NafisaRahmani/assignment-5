<DOCTYPE html>
<html lang="fa">
<head>
  <meta charset="UTF-8">
  <title>افزودن ضرب‌المثل</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
   <%- include('partials/header', { query: typeof query !== 'undefined' ? query : '' }) %>
  <div class="container my-5">
    <h1 class="mb-4">افزودن ضرب‌المثل جدید</h1>

    <form action="/proverb" method="POST" class="card p-4 shadow-sm">
      <div class="mb-3">
        <label class="form-label">متن دری</label>
        <input type="text" name="textDari" class="form-control" required>
      </div>
      <div class="mb-3">
        <label class="form-label">متن پشتو</label>
        <input type="text" name="textPashto" class="form-control" required>
      </div>
      <div class="mb-3">
        <label class="form-label">ترجمه انگلیسی</label>
        <input type="text" name="translationEn" class="form-control en" required>
      </div>
      <div class="mb-3">
        <label class="form-label">معنا</label>
        <input type="text" name="meaning" class="form-control">
      </div>
      <div class="mb-3">
        <label class="form-label">دسته‌بندی</label>
        <input type="text" name="category" class="form-control">
      </div>
      <button type="submit" class="btn btn-success">ذخیره</button>
      <a href="/" class="btn btnB btn-secondary">بازگشت</a>
    </form>
  </div>
    <%- include('partials/footer')%>
</body>
</html>